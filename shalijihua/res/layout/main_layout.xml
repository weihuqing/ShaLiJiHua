<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white" >

        <TextView
            android:id="@+id/cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:text="@string/title_cash"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/recharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dip"
            android:text="@string/title_recharge"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true" >

        <RelativeLayout
            android:id="@+id/tab1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <View
                android:id="@+id/tab_img1"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tab_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tab_img1"
                android:layout_centerHorizontal="true"
                android:text="@string/tab_text1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab2"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <View
                android:id="@+id/tab_img2"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tab_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tab_img2"
                android:layout_centerHorizontal="true"
                android:text="@string/tab_text2" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab3"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <View
                android:id="@+id/tab_img3"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tab_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tab_img3"
                android:layout_centerHorizontal="true"
                android:text="@string/tab_text3" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tab4"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <View
                android:id="@+id/tab_img4"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:background="@color/white" />

            <TextView
                android:id="@+id/tab_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tab_img4"
                android:layout_centerHorizontal="true"
                android:text="@string/tab_text4" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>